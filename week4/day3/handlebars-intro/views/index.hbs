<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hbs Intro</title>
</head>
<body>
    <h1>Hello {{name}}</h1>
    <!-- IF and Else Conditions --> 
    {{#if favouriteColor}}
        <h2>{{favouriteColor}}</h2>
    {{/if}}

    <!-- Second Example -->
    {{#if favouriteMovie}}
        <h3>{{favouriteMovie}}</h3>
    {{else}}
        <p>No movies yet :(</p>
    {{/if}}
    
    <!-- For Loops -->
    <ul>
        {{#each favouriteCities}}
            <li>{{@index}}:{{this}}</li>
        {{/each}}
    </ul>
    <!-- Print HTML from JS Object -->
    {{{favouriteFood}}}

    <!-- Access Values inside Object's Properties -->
    {{#with favouriteMusicGenre}}
        <p>{{name}}, {{favouriteBand}}</p>
    {{/with}}
</body>
</html>